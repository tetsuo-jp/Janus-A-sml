// run-length encoding

i j
text[7]
arc[14]

procedure encode
    from  (i=0) && (j=0)
    loop  arc[j]+=text[i] // arc[j] <=> text[i]
          text[i]-=arc[j]
          from  arc[j+1]=0
          do    arc[j+1]+=1
                i+=1
          loop  text[i]-=arc[j]
          until arc[j]!=text[i]
          j+=2
    until text[i]=0

    // i & j should be cleared
    from  arc[j]=0
    do    j-=2
          i-=arc[j+1]
    until i=0

procedure test1
    text[0]+=1
    text[1]+=1
    text[2]+=2
    text[3]+=2
    text[4]+=2
    text[5]+=1
    call encode

procedure test2
    text[0]+=2
    text[1]+=2
    text[2]+=2
    text[3]+=2
    text[4]+=2
    call encode
